{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "firstName": {
      "type": "string",
      "minLength": 1,
      "title": "First Name"
    },
    "lastName": {
      "type": "string",
      "minLength": 1,
      "title": "Last Name"
    },
    "email": {
      "type": "string",
      "format": "email",
      "title": "Email"
    },
    "linkedin": {
      "type": "string",
      "format": "uri",
      "title": "LinkedIn"
    },
    "visasInterested": {
      "type": "string", 
      "title": "Visas that youâ€™re interested in",
      "enum": ["0-1", "EB-1A", "EB-2 NIW", "I don't know"]
    },
    "resume": {
      "type": "string",
      "contentMediaType": "application/pdf",
      "contentEncoding": "base64",
      "title": "Resume / CV",
      "format": "data-url"
    },
    "additionalInformation": {
      "type": "string",
      "title": "Additional Information"
    }
  },
  "required": ["firstName", "lastName", "email", "linkedin"]
}
